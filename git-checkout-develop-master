#/usr/bin/env bash
#
# Setup:
#   $ install -d $HOME/bin && install git-checkout-develop-master $HOME/bin
#   $ export PATH=$HOME/bin:$PATH
#
# Git Alias:
#   $ git config --global --add alias.com '!git-checkout-develop-master'

git show-ref --verify --quiet refs/heads/develop
if [ $? == 0 ]
then
  git checkout develop
else
  git checkout master
fi
